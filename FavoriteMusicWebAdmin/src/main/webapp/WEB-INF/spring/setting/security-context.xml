<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Spring security -->
	<!-- Security pattern 입력 -->
	<!-- security auto-config -->
	<security:http auto-config="true">
		<security:intercept-url pattern="/test" access="ROLE_USER" />
		<security:intercept-url pattern="/test/*" access="ROLE_ADMIN" />
		<!-- Security intercept-URL -->
		<security:intercept-url pattern="/main.do"
			access="ROLE_ADMIN" />
		<security:form-login login-page="/login.do"
			default-target-url="/main.do" authentication-failure-url="/loginFail.do" />
		<security:logout logout-success-url="/logout.do" />

	</security:http>
